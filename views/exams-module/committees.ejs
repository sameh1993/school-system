<!DOCTYPE html>
<html lang="en">
<%- include('../parts/head') %>
<body dir="rtl">
    
  <div class="container">
        <!-- start committees -->
    <ul class="config list-unstyled">
        <div> <span> المحافظه </span> : <%= config.city_name %> </div>
        <div> <span> الاداره </span> : <%= config.organiztion %> </div>
        <div> <span> المدرسه </span> : <%= config.school_name %> </div>
    </ul>
    <table class="table table-striped" style="width: 50%">
        <thead>
          <tr>
            <th scope="col"> م</th>
            <th scope="col">الاسم بالكامل</th>
            <th scope="col">رقم الجلوس</th>
          </tr>
        </thead>
        <tbody>

          <% const commCount = +committees.length / studentCount %>

          <% for(let looping=1; looping <= commCount; looping++ ) {  %>

            <% for(i = looping != 1 ? student : 0; i < (i + studentCount) - 1; i++ ) { %>
              <% if(i < +committees.length ) {  %>

                <tr>
                  <th class="text-center"> <%= i + 1 %></th>
                  <td> <a href="/student/<%= committees[i].ssn %>"> <%=  committees[i].fullname %> </a> </td>
                  <td> <%= committees[i].sitting_no %> </td>
              </tr>
              <% } else {  %>
                  <div>sameh</div>
                <% }  %>
            <% } %>
            <% let student = looping * studentCount %>
              
          <% } %>
          
          
  
        </tbody>
      </table>

    <!-- end committees -->
  </div>
</body>
</html>