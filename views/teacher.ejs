<!DOCTYPE html>
<html>

<%- include("parts/head") %>

<body dir="rtl">

	<!-- start side bar  -->
	<%- include("parts/side-bar")%>
	<!--/.sidebar-->

	<div class="dashboard mb-4 col-sm-9 col-lg-10 main">
		<h4 class="text-center text-capitalize main-title"> مدرسه <%= SchoolName %> </h4>
		<div class="main-row">
			<div><a href="/">
					<em class="fa fa-home"></em>
				</a> / 
				<p class="active"> المدرسين </p>
			</div>
			<div class="user">
				<i class="fa fa-user"></i>
				user
			</div>
	
	</div>
		<!--/.row-->

		<div class="querys">

			<ul class="list-unstyled links">
				<li><a href="/teacher/add"> أضافه معلم جديد </a></li>
				<li data-show="search-form" class="view"> الاستعلام عن بيانات المعلم </li>
			</ul>
		</div>


	</div>
	<!--/.main-->


	<!-- start forms -->

	<div class="fixed search-form">
		<i class="fa fa-window-close"></i>
		<form action="/teacher/search" method="post" class="form">
			<div class="form-group">
				<label> نوع البحث </label>
				<select class="form-control typeSearch" name="search">
					<option selected> أختر من القائمه </option>
					<option value="ssn"> البحث بالرقم القومي </option>
					<option value="name"> البحث بالاسم </option>
				</select>
			</div>

			<div class="form-group">
				<label> رقم القومي او اسم الطالب </label>
				<input class="form-control searchValue" type="text" placeholder="أدخل رقم القومى او اسم المعلم" name="searchValue">
			</div>

			<button type="submit" class="btn btn-primary"> أرسال </button>
		</form>
	</div>






	<script src="js/jquery-1.11.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/chart.min.js"></script>
	<script src="js/chart-data.js"></script>
	<script src="js/easypiechart.js"></script>
	<script src="js/easypiechart-data.js"></script>
	<script src="js/bootstrap-datepicker.js"></script>
	<script src="js/custom.js"></script>
	<script>
		window.onload = function () {
			var chart1 = document.getElementById("line-chart").getContext("2d");
			window.myLine = new Chart(chart1).Line(lineChartData, {
				responsive: true,
				scaleLineColor: "rgba(0,0,0,.2)",
				scaleGridLineColor: "rgba(0,0,0,.05)",
				scaleFontColor: "#c5c7cc"
			});
		};



		$(".typeSearch").change(function() {
			
			if($(this).val() == 'ssn') {
				console.log($(this).val())
				$('.searchValue').attr('type', "number")
			} else {
				$('.searchValue').attr('type', "text")
			}
		})
	</script>

</body>

</html>